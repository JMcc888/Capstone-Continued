<%- include('partials/header') %>
<h1 class="jumbotron text-center">Sign up</h1>
<h4 class="text-center">Register to begin sending appointment requests</h4>
<div class="form-group form-container">    
        <form action="/sign-up" class="p3 border-rounded-0" method="POST">
          <small id="passwordHelpInline" class="text-muted">
            Enter a username.
           </small>
          <input type="text" class="form-control" name="username" placeholder="username" autofocus required>
          
    
          <small id="passwordHelpInline" class="text-muted">
            Enter an email addresss.
          </small>
          <input type="text"   class="form-control" name="email" placeholder="email" autofocus required>
          
    
          <small id="passwordHelpInline" class="text-muted text-center">
            Enter a password.
          </small>
          <input type="password" class="form-control mb-2" name="password" placeholder="password" autofocus required>
          
          
          <button type="button submit" class="btn btn-success form-control">Register</button>

          
          </form>
        </div>
<%- include('partials/footer') %>